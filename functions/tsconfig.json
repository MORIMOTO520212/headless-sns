{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "build-js"]
}
